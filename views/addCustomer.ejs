<%- include("partials/header"); -%> <% if(error){ %>
<div id="error-message" class="alert alert-danger" role="alert"><%= error %></div>
<% } %>
<form action="/addCustomer" method="POST" class="ml-1">
	<h1>Add New Customer</h1>

	<div class="form-row">
		<div class="col-md-5 ml-1">
			<div class="form-group">
				<label for="customerName">Name:</label>
				<input type="text" id="customerName" name="customerName" class="form-control" value="<%- FormData ? FormData.customerName : '' %>" placeholder="Enter name" required />
			</div>
		</div>
		<div class="col-md-5 ml-4">
			<div class="form-group">
				<label for="mobile_no">Mobile Number:</label>
				<input type="text" id="mobile_no" name="mobile_no" class="form-control" value="<%- FormData ? FormData.mobile_no : '' %>" placeholder="Enter mobile number" required />
			</div>
		</div>
	</div>
	<div class="form-row">
		<div class="col-md-5 ml-1">
			<div class="form-group">
				<label for="transaction_type">Transaction Type:</label>
				<select id="transaction_type" name="transaction_type" class="form-control" value="<%- FormData ? FormData.transaction_type : '' %>" required>
					<option value="credit">Credit</option>
					<option value="debit">Debit</option>
				</select>
			</div>
		</div>
		<div class="col-md-5 ml-4">
			<div class="form-group">
				<label for="transaction_amount">Transaction Amount:</label>
				<input type="number" id="transaction_amount" name="transaction_amount" class="form-control" value="<%- FormData ? FormData.transaction_amount : '' %>" required />
			</div>
		</div>
		<div class="col-md-5 ml-4">
			<div class="form-group">
				<label for="remarks">Remarks:</label>
				<input type="text" id="remarks" name="remarks" class="form-control" value="<%- FormData ? FormData.remarks : '' %>" required />
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Add New Customer</button>
</form>

<%- include("partials/footer"); -%>

<script>
	// Automatically remove the error message after 5 seconds
	setTimeout(() => {
		const errorMessage = document.getElementById("error-message");
		if (errorMessage) {
			errorMessage.remove();
		}
	}, 5000);
</script>
